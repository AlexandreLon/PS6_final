<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/idStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficheur"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <ImageButton
        android:id="@+id/heap_before_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:rotation="180"
        android:tint="#3F51B5"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <TextView
        android:id="@+id/heap_before_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:layout_marginTop="85dp"
        android:layout_toEndOf="@id/heap_before_button"/>

    <TextView
        android:id="@+id/heap_next_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:layout_marginTop="85dp"
        android:layout_toStartOf="@id/heap_next_button"
        />

    <ImageButton
        android:id="@+id/heap_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:background="@null"
        android:tint="#3F51B5"
        app:srcCompat="@android:drawable/ic_menu_send" />


    <Button
        android:id="@+id/add_heap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#C650922B"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/supress_heap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:backgroundTint="#DF3535"
        android:layout_marginLeft="50dp"

        android:layout_toEndOf="@+id/add_heap"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficheur"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficheur"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="300dp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficheur"
        android:layout_below="@id/textView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficheur"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficheur"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>